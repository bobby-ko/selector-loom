    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Update Dictionary",
            "program": "${workspaceFolder}/util/update-dictionary.ts",
            "env": {
                "NODE_ENV": "development",
            },
            "args": [
                "en",
                "./tmp/subset-evolution-words copy.json"
            ],
            "preLaunchTask": "build-util",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "runtimeArgs": [
                "--experimental-modules"
            ]
        }               
    ]
}