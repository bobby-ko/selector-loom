{
    "name": "selector-loom",
    "author": "Bobby Kotzev",
    "license": "ISC",
    "version": "0.2.0",
    "description": "Better CSS selector generator for modern websites",
    "keywords": [
        "css",
        "selector",
        "element",
        "path",
        "dom",
        "html",
        "optimal",
        "robust",
        "generator",
        "typescript"
    ],
    "type": "module",
    "engines": {
        "node": ">=16.0.0"
    },
    "main": "dist/esm/src/selector-loom.js",
    "module": "dist/esm/src/selector-loom.js",
    "types": "dist/esm/src/selector-loom.d.ts",
    "files": [
        "dist/"
    ],
    "scripts": {
        "build": "rm -rf dist/* && npm run build:esm && npm run build:cjs",
        "build:esm": "tsc && cp -r src/dictionaries dist/esm/src/dictionaries",
        "build:cjs": "tsc --module CommonJS --outDir dist/cjs && cp -r src/dictionaries dist/cjs/src/dictionaries",
        "build:util": "rm -rf dist/* && tsc --project tsconfig.util.json",
        "test": "vitest --coverage",
        "publish": "npm run build && npm publish",
        "login": "npm login --auth-type legacy"
    },
    "dependencies": {
        "binary-search": "^1.3.6",
        "date-fns": "^2.30.0",
        "jquery": "^3.7.1",
        "lodash": "^4.17.21",
        "natural": "^6.7.0",
        "node-cache": "^5.1.2",
        "p-limit": "^4.0.0",
        "source-map-support": "^0.5.21",
        "tslib": "^2.6.2",
        "wordnet-db": "^3.1.14"
    },
    "devDependencies": {
        "@types/command-line-args": "^5.2.0",
        "@types/fs-extra": "^11.0.1",
        "@types/jquery": "^3.5.17",
        "@types/jsdom": "^21.1.2",
        "@types/lodash": "^4.14.197",
        "@types/node": "^20.5.7",
        "@vitest/coverage-v8": "^0.34.3",
        "axios": "^1.5.0",
        "fs-extra": "^11.1.1",
        "jsdom": "^22.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.2.2",
        "vitest": "^0.34.3"
    }
}
